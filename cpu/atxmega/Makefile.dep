# peripheral drivers are linked into the final binary
USEMODULE += atxmega_periph

# All ATxmega based CPUs provide PM
USEMODULE += pm_layered

ifneq (,$(findstring atxmegaa1,$(CPU_MODEL)))
  FEATURES_REQUIRED += periph_ebi
endif

FEATURES_OPTIONAL += periph_cpuid
FEATURES_OPTIONAL += periph_i2c
FEATURES_REQUIRED += periph_nvm
FEATURES_OPTIONAL += periph_spi
FEATURES_OPTIONAL += periph_uart

include $(RIOTCPU)/avr8_common/Makefile.dep
