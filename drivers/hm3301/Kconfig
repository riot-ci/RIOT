config MODULE_HM3301
    bool "HM3301 Particulate Matter Sensor"
    depends on HAS_PERIPH_I2C
    depends on HAS_PERIPH_GPIO
    depends on TEST_KCONFIG
    select MODULE_PERIPH_I2C
    select MODULE_PERIPH_GPIO

menuconfig KCONFIG_USEMODULE_HM3301
    bool "Configure HM3301 driver"
    depends on USEMODULE_HM3301
    help
        Configure the HM3301 driver using Kconfig.

if KCONFIG_USEMODULE_HM3301

config HM3301_INDOOR_ENVIRONMENT
    bool "Indoor environment calibration"
    default 500
    help
        The HM3301 sensor outputs two set of PM* values, one calibrated for indoor
        environment and another one for atmospheric environment, set this value
        according to your deployment.
endif # KCONFIG_USEMODULE_HM3301
