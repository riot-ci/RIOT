if TEST_KCONFIG
config MODULE_TRACE
    bool "Execution tracing"
    select MODULE_XTIMER

if MODULE_TRACE
rsource "Kconfig.config"
endif # MODULE_TRACE

endif # TEST_KCONFIG

if !TEST_KCONFIG
menuconfig KCONFIG_USEMODULE_TRACE
    bool "Configure the trace module using Kconfig"
    depends on USEMODULE_TRACE

if KCONFIG_USEMODULE_TRACE
rsource "Kconfig.config"
endif # KCONFIG_USEMODULE_TRACE

endif # !TEST_KCONFIG
