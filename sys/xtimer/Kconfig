menuconfig MOD_XTIMER
    bool "xtimer"
    select MOD_PERIPH_TIMER if HAS_PERIPH_TIMER && !MOD_XTIMER_ON_ZTIMER
    depends on HAS_PERIPH_TIMER && !MOD_XTIMER_ON_ZTIMER || MOD_XTIMER_ON_ZTIMER
    depends on TEST_KCONFIG
    select MOD_DIV if !MOD_ZTIMER_XTIMER_COMPAT
    help
        Include xtimer module. xtimer requires a low-level timer implementation
        that can be provided either by a peripheral timer or the ztimer module
        when MOD_XTIMER_ON_ZTIMER is enabled.

if MOD_XTIMER

config MOD_AUTO_INIT_XTIMER
    bool "Auto-init xtimer"
    default y if MOD_AUTO_INIT
    depends on !MOD_ZTIMER_XTIMER_COMPAT
    depends on MOD_XTIMER

endif # MOD_XTIMER
